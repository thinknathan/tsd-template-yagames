{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "defold",
			"action": "build",
			"configuration": "debug",
			"platform": "current",
			"problemMatcher": [
				"$defold-build"
			],
			"label": "build",
			"detail": "Build the project for running, debugging or testing",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": ["compile"]
		},
		{
			"type": "npm",
			"script": "build",
			"problemMatcher": ["$tsc"],
			"label": "compile",
			"detail": "tstl"
		},
		{
			"type": "npm",
			"script": "dev",
			"problemMatcher": ["$tsc-watch"],
			"label": "watch",
			"detail": "tstl --watch"
		}
	]
}